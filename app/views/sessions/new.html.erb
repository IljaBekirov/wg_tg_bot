<h1>Вход для администратора</h1>

<%= form_with url: login_path, local: true do |form| %>
  <% if flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
  <% end %>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password, "Пароль" %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Войти" %>
  </div>
<% end %>
