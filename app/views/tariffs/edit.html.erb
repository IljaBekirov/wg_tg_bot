<h1>Редактирование тарифа</h1>

<%= form_with model: @tariff, url: tariff_path(@tariff), local: true do |form| %>
  <% if @tariff.errors.any? %>
    <div style="color: red;">
      <h2><%= pluralize(@tariff.errors.count, "ошибка") %> при обновлении тарифа:</h2>
      <ul>
        <% @tariff.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :duration, 'Месяцев' %>
    <%= form.number_field :duration, min: 1, step: 1 %>
  </div>

  <div class="form-group">
    <%= form.label :price, 'Цена' %>
    <%= form.number_field :price, step: 0.01, min: 0 %>
  </div>

  <div class="form-group">
    <%= form.label :description, 'Описание' %>
    <%= form.text_area :description, rows: 4 %>
  </div>

  <div class="form-group">
    <%= form.submit 'Обновить тариф' %>
  </div>
<% end %>

<%= link_to 'Назад к списку', tariffs_path %>
