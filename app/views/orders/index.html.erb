<h1>Список заказов</h1>

<% if @orders.any? %>
  <table class="tariff-table">
    <thead>
    <tr>
      <th>ID</th>
      <th>Пользователь</th>
      <th>Статус</th>
      <th>Telegram ID</th>
      <th>Тариф</th>
      <th>Сумма</th>
      <th>Платеж ID</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.user_id || 'Без пользователя' %></td>
        <td><%= order.status || 'Не указан' %></td>
        <td><%= order.telegram_user_id || 'Не указан' %></td>
        <td><%= order.tariff&.duration || 'Без тарифа' %></td>
        <td><%= order.amount || 'Не указана' %></td>
        <td><%= order.payment_id || 'Не указан' %></td>
        <td>
          <div class="actions-container">
            <%= link_to 'Просмотреть', order_path(order), class: 'action-button button-base' %>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p class="empty-message">Заказов пока нет</p>
<% end %>
